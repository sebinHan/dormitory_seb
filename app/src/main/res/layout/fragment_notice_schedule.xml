<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notice_schedule"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <Button
        android:id="@+id/but1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="125dp"
        android:text="요일별 일정"/>
    <ViewFlipper
        android:id="@+id/flipper1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/sun"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/mon"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/tue"/>
        <ImageView
            android:id="@+id/img4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/wed"/>
        <ImageView
            android:id="@+id/img5"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/thu"/>
        <ImageView
            android:id="@+id/img6"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/fri"/>
        <ImageView
            android:id="@+id/img7"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/sat"/>
    </ViewFlipper>
    <Button
        android:id="@+id/but2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="125dp"
        android:text=" 일정"/>
    <ViewFlipper
        android:id="@+id/flipper2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/img8"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/machine4"/>
        <ImageView
            android:id="@+id/img9"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/machine5"/>
    </ViewFlipper>
</RelativeLayout>